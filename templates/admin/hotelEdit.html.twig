{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'home' %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="hotels.php"><i class="fa fa-home"></i> Гостиницы</a></li>
                <li class="active">{% if hotels is defined %}{{ hotels.title_ru }}{% else %}Новый отель{% endif %}</li>
            </ol>
        </div>

        {#<ul class="nav nav-tabs">#}
            {#{% for lan in lang %}#}
            {#<li{% if loop.index == 1 %} class="active"{% endif %}><a data-toggle="tab" href="#panel_{{ lan.code }}"><img class="flag flag-{{ lan.code }}" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"> {{ lan.name }}</a></li>#}
            {#{% endfor %}#}
        {#</ul>#}

        <form class="form-horizontal" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id" id="id" value="{% if hotels is defined %}{{ hotels.id }}{% else %}0{% endif %}">
                <div class="box-body">
                    {% if error is defined  %}
                        {{ error }}
                    {% endif %}
                    <div class="form-group">
                        <label for="title_ru" class="col-sm-2 control-label">Название (ru)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="title_ru" id="title_ru" placeholder="Название" value="{% if hotels is defined %}{{ hotels.title_ru }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title_us" class="col-sm-2 control-label">Название (en)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="title_us" id="title_us" placeholder="Название" value="{% if hotels is defined %}{{ hotels.title_us }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title_cn" class="col-sm-2 control-label">Название (cn)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="title_cn" id="title_cn" placeholder="Название" value="{% if hotels is defined %}{{ hotels.title_cn }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="online_link" class="col-sm-2 control-label">Online бронирование</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="online_link" id="online_link" placeholder="Ссылка на online бронирование" value="{% if hotels is defined %}{{ hotels.online_link }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description_ru" class="col-sm-2 control-label">Описание (ru)</label>
                        <div class="col-sm-6">
                        <textarea name="description_ru" id="editor1" rows="10" cols="80">
                            {% if hotels is defined %}{{ hotels.description_ru }}{% endif %}
                        </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description_us" class="col-sm-2 control-label">Описание (en)</label>
                        <div class="col-sm-6">
                        <textarea name="description_us" id="editor2" rows="10" cols="80">
                            {% if hotels is defined %}{{ hotels.description_us }}{% endif %}
                        </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description_cn" class="col-sm-2 control-label">Описание (cn)</label>
                        <div class="col-sm-6">
                        <textarea name="description_cn" id="editor3" rows="10" cols="80">
                            {% if hotels is defined %}{{ hotels.description_cn }}{% endif %}
                        </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="logo" class="col-sm-2 control-label">Изображение</label>
                        <div class="col-sm-8">
                            {% if hotels.logo is not null %}
                                <div><img src="{{ hotels.logo }}" width="300"> </div>
                                <br>
                            {% endif %}
                            <input type="file" name="logo" class="form-control" id="logo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="logo" class="col-sm-2 control-label">Места общего пользования</label>

                        <div class="col-sm-8">
                            <input type="file" name="files[]" id="filer_input2" multiple="multiple">
                            <div class="jFiler-items jFiler-row">
                                <ul class="jFiler-items-list jFiler-items-grid">
                                    {% for value in images %}
                                        <li class="jFiler-item" data-jfiler-index="0" style="">
                                            <div class="jFiler-item-container">
                                                <div class="jFiler-item-inner">
                                                    <div class="jFiler-item-thumb">
                                                        <div class="jFiler-item-thumb-image">
                                                            <img src="{{ path }}{{ value }}" draggable="true">
                                                        </div>
                                                    </div>
                                                    <div class="jFiler-item-assets jFiler-row">
                                                        <ul class="list-inline pull-left">
                                                            <li>
                                                                <div class="jFiler-item-others text-success">
                                                                    <i class="icon-jfi-check-circle"></i> {{ value }}
                                                                </div>
                                                            </li>
                                                        </ul>
                                                        <ul class="list-inline pull-right">
                                                            <li class="del-img" id="{{ value }}">
                                                                <a class="icon-jfi-trash jFiler-item-trash-action"></a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="box-header h3">Поисковые сервисы</div>
                    <div class="form-group">
                        <label for="meta_desc" class="col-sm-2 control-label">Описание</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="meta_desc" id="meta_desc" placeholder="Описание для поисковых сервисов" value="{% if hotels is defined %}{{ hotels.meta_desc }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="meta_key" class="col-sm-2 control-label">Ключевые слова</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="meta_key" id="meta_key" placeholder="Ключевые слова для поисковых сервисов" value="{% if hotels is defined %}{{ hotels.meta_key }}{% endif %}">
                        </div>
                    </div>
                    <div class="box-header h3">Контактная информация</div>
                    <div class="form-group">
                        <label for="phone" class="col-sm-2 control-label">Контактный телефон</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="phone" id="phone" placeholder="Номер телефона отеля" value="{% if hotels is defined %}{{ hotels.phone }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone2" class="col-sm-2 control-label">Дополнительный телефон</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="phone2" id="phone2" placeholder="Дополнительный номер телефона" value="{% if hotels is defined %}{{ hotels.phone2 }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-2 control-label">E-mail</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="email" id="email" placeholder="E-mail" value="{% if hotels is defined %}{{ hotels.email }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address_ru" class="col-sm-2 control-label">Адрес (ru)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="address_ru" id="address_ru" placeholder="Адрес" value="{% if hotels is defined %}{{ hotels.address_ru }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address_us" class="col-sm-2 control-label">Адрес (en)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="address_us" id="address_us" placeholder="Адрес" value="{% if hotels is defined %}{{ hotels.address_us }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address_cn" class="col-sm-2 control-label">Адрес (cn)</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="address_cn" id="address_cn" placeholder="Адрес" value="{% if hotels is defined %}{{ hotels.address_cn }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
