{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'search' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Настройки для поисковых сервисов</h3>
                {#<a href="?edit=0" title="Добавить" class="btn btn-success pull-right">#}
                    {#<i class="fa fa-plus"></i>#}
                {#</a>#}
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    {% for value in search %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="{% if value.page == "hotels" %}hotels.php{% else %}?edit={{ value.id }}{% endif %}">{{ value.title }}</a></td>
                            <td style="width: 10px">
                                <a href="{% if value.page == "hotels" %}hotels.php{% else %}?edit={{ value.id }}{% endif %}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
