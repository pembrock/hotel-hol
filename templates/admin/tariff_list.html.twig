{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'rates_room' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Тарифные таблицы тарифа "{{ rate.title_ru }}"</h3>
                <a href="?tid={{ tid }}&hid={{ hotel.id }}&ttid=0" title="Добавить" class="btn btn-success pull-right">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Название</th>
                        <th>Начало действия</th>
                        <th>Гостиница</th>
                        <th>Активная</th>
                    </tr>
                    </thead>
                    {% for value in tables %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="?tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}">{{ value.title }}</a></td>
                            <td>{{ value.start_ts|date('d.m.Y') }}</td>
                            <td>{{ hotel.title_ru }}</td>
                            <td>{% if value.isActive == 1 %}<span class="label label-success">Да</span>{% else %}<span class="label label-danger">Нет</span>{% endif %}</td>
                            <td style="width: 10px">
                                <a href="?tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                            <td style="width: 10px">
                                <a href="?copy&tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}" type="button" class="btn btn-block btn-warning">Копировать</a>
                            </td>
                            <td style="width: 10px">
                                <a href="?deltable&tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}" type="button" class="btn btn-block btn-danger">Удалить</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
