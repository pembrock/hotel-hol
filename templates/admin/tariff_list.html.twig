{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'rates_room' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Тарифные таблицы тарифа "{{ rate.title }}"</h3>
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Название</th>
                        <th>Начало действия</th>
                        <th>Гостиница</th>
                    </tr>
                    </thead>
                    {% for value in tables %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="?tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}">{{ value.title }}</a></td>
                            <td>{{ value.start_ts|date('d.m.Y') }}</td>
                            <td>{{ hotel.title }}</td>
                            <td style="width: 10px">
                                <a href="?tid={{ tid }}&hid={{ hotel.id }}&ttid={{ value.id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
