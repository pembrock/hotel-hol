{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'additional' %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="additional.php"><i class="fa fa-wrench"></i> Дополнительные услуги</a></li>
                <li class="active">{% if service is defined %}{{ service.title_ru }}{% else %}Новая услуга{% endif %}</li>
            </ol>
        </div>
        <!-- /.box-header -->
        <ul class="nav nav-tabs">
            {% for lan in lang %}
                <li{% if loop.index == 1 %} class="active"{% endif %}><a data-toggle="tab" href="#panel_{{ lan.code }}"><img class="flag flag-{{ lan.code }}" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"> {{ lan.name }}</a></li>
            {% endfor %}
        </ul>
        <!-- form start -->
        <form class="form-horizontal" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" id="id" value="{% if service is defined %}{{ service.id }}{% else %}0{% endif %}">
            <div class="box-body">
                {% if error is defined  %}
                    <div class="alert alert-warning alert-dismissible">
                        <ul>
                            {% for e in error %}
                                <li>{{ e }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <div class="tab-content">
                    <div id="panel_ru" class="tab-pane fade in active">
                        <div class="form-group">
                            <label for="title_ru" class="col-sm-2 control-label">Название (ru)</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="title_ru" id="title_ru" placeholder="Название" value="{% if service is defined %}{{ service.title_ru }}{% endif %}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description_ru" class="col-sm-2 control-label">Описание (ru)</label>
                            <div class="col-sm-6">
                        <textarea name="description_ru" id="editor1" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_ru }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="panel_us" class="tab-pane fade">
                        <div class="form-group">
                            <label for="title_us" class="col-sm-2 control-label">Название (en)</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="title_us" id="title_us" placeholder="Название" value="{% if service is defined %}{{ service.title_us }}{% endif %}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description_us" class="col-sm-2 control-label">Описание (en)</label>
                            <div class="col-sm-6">
                        <textarea name="description_us" id="editor2" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_us }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="panel_cn" class="tab-pane fade">
                        <div class="form-group">
                            <label for="title_cn" class="col-sm-2 control-label">Название (cn)</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="title_cn" id="title_cn" placeholder="Название" value="{% if service is defined %}{{ service.title_cn }}{% endif %}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description_cn" class="col-sm-2 control-label">Описание (cn)</label>
                            <div class="col-sm-6">
                        <textarea name="description_cn" id="editor3" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_cn }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="panel_fr" class="tab-pane fade">
                        <div class="form-group">
                            <label for="title_fr" class="col-sm-2 control-label">Название (fr)</label>
                            <div class="col-sm-6">
