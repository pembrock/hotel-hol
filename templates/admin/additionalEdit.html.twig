                            <div class="col-sm-6">
                        <textarea name="description_vn" id="editor6" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_vn }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="panel_tr" class="tab-pane fade">
                        <div class="form-group">
                            <label for="title_tr" class="col-sm-2 control-label">Название (tr)</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="title_tr" id="title_tr" placeholder="Название" value="{% if service is defined %}{{ service.title_tr }}{% endif %}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description_tr" class="col-sm-2 control-label">Описание (tr)</label>
                            <div class="col-sm-6">
                        <textarea name="description_tr" id="editor7" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_tr }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="panel_de" class="tab-pane fade">
                        <div class="form-group">
                            <label for="title_de" class="col-sm-2 control-label">Название (de)</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="title_de" id="title_de" placeholder="Название" value="{% if service is defined %}{{ service.title_de }}{% endif %}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description_de" class="col-sm-2 control-label">Описание (de)</label>
                            <div class="col-sm-6">
                        <textarea name="description_de" id="editor8" rows="10" cols="80">
                            {% if service is defined %}{{ service.description_de }}{% endif %}
                        </textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="isActive" class="col-sm-2 control-label">Активно</label>
                    <div class="col-sm-6">
                        <input type="checkbox" class="form-control-static" name="isActive" id="isActive" value="1" {% if service is defined %}{% if service.isActive == 1 %} checked {% endif %}{% endif %} style="width: 25px;">
                    </div>
                </div>
                <div class="form-group">
                    <label for="logo" class="col-sm-2 control-label">Логотип</label>
                    <div class="col-sm-8">
                        {% if service.logo is not null %}
                            <div><img src="{{ service.logo }}" > </div>
                            <br>
                        {% endif %}
                        <input type="file" name="logo" class="form-control" id="logo">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <!-- /.box-footer -->
            <div class="box-footer">
                <button type="submit" class="btn btn-success" name="save" id="save">Сохранить</button>
            </div>
        </form>
    </div>
{% endblock %}
