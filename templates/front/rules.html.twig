{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{% if lang.type == "ru" %}Правила заселения в мини-гостиницу Hotel-hol{% elseif lang.type == "us" %}Settlement rules in the mini-hotel Hotel-hol{% elseif lang.type == "cn" %}在迷你酒店Hotel-HOL結算規則{% else %}Правила заселения в мини-гостиницу Hotel-hol{% endif %}</h1>
                    </div>
                    {% if blocks.rules is defined %}
                    <div class="card caption color_1">
                        <h2>{{ blocks.rules.title }}</h2>
                        <p>{{ blocks.rules.text|raw }}</p>
                    </div>
                    {% endif %}
                    {% if blocks.checkin is defined %}
                    <div class="card caption color_2">
                        <h2>{{ blocks.checkin.title }}</h2>
                        {{ blocks.checkin.text|raw }}
                    </div>
                    {% endif %}
                    {% if blocks.services is defined %}
                    <div class="card caption color_3">
                        <h2>{{ blocks.services.title }}</h2>
                        {{ blocks.services.text|raw }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}