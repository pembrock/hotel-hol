{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{% if lang.type == "ru" %}Адреса и контактная информация сети гостиниц «Hotel-hol»:{% elseif lang.type == "us" %}Addresses and contact information on a network of hotels «Hotel-hol»:{% elseif lang.type == "cn" %}地址和一個酒店網絡上的聯繫人信息«Hotel-hol»:{% else %}Адреса и контактная информация сети гостиниц «Hotel-hol»:{% endif %}</h1>
                    </div>
                </div>

                <div class="col-md-12">
                    {% for hotel in hotels %}
                    <div class="card caption">
                        <div class="row">
                            <div class="col-md-6">
                                <h2>Мини-отель «{{ hotel.title }}»</h2>
                                <p>Контактный телефон: <a href="tel: {{ hotel.phone }}">{{ hotel.phone }}</a><br>
                                    E-mail: <a href="mailto: {{ hotel.email }}"> {{ hotel.email }}</a><br>
                                    Адрес: {{ hotel.address }}<br>
                                    Метро: {{ hotel.subway }}
                                </p>
                                {{ hotel.address_description|raw }}
                            </div>
                            <div class="col-md-6">
                                <script type="text/javascript" charset="utf-8" src="{{ hotel.maps_link }}"></script>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}