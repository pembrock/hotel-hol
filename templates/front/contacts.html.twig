{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{% if lang.type == "ru" %}Адреса и контактная информация сети гостиниц «Hotel-hol»:{% elseif lang.type == "us" %}Addresses and contact information on a network of hotels «Hotel-hol»:{% elseif lang.type == "cn" %}地址和一個酒店網絡上的聯繫人信息«Hotel-hol»:{% else %}Адреса и контактная информация сети гостиниц «Hotel-hol»:{% endif %}</h1>
                    </div>
                </div>

                <div class="col-md-12">
                    {% for hotel in hotels %}
                    <div class="card caption">
                        <div class="row">
                            <div class="col-md-6">
                                <h2><a href="hotels?id={{ hotel.id }}">{% if lang.type == "ru" %}Мини-отель{% else %}Hotel{% endif %} «{{ hotel.title }}»</a></h2>
                                <p>{% if lang.type == "ru" %}Контактный телефон{% else %}Phone{% endif %}: <a href="tel: {{ hotel.phone }}">{{ hotel.phone }}</a><br>
                                    E-mail: <a href="mailto: {{ hotel.email }}"> {{ hotel.email }}</a><br>
                        {% if lang.type == "ru" %}Адрес{% else %}Address{% endif %}: {{ hotel.address }}<br>
                        {% if lang.type == "ru" %}Метро{% else %}Subway{% endif %}: {{ hotel.subway }}
                                </p>
                                {{ hotel.address_description|raw }}
                            </div>
                            <div class="col-md-6">
                                <script type="text/javascript" charset="utf-8" src="{% if lang.type == "ru" %}{{ hotel.maps_link }}{% else %}{{ hotel.maps_link|replace({'ru_RU': 'en_US'}) }}{% endif %}"></script>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}