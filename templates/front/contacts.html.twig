{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{{ titles.addresses_and_contacts }}</h1>
                    </div>
                </div>

                <div class="col-md-12">
                    {% for hotel in hotels %}
                    <div class="card caption">
                        <div class="row">
                            <div class="col-md-6">
                                <h2><a href="hotels?id={{ hotel.id }}">{{ titles.hotel }} «{{ hotel.title }}»</a></h2>
                                <p>{{ titles.phone }}: <a href="tel: {{ hotel.phone }}">{{ hotel.phone }}</a><br>
                                    E-mail: <a href="mailto: {{ hotel.email }}"> {{ hotel.email }}</a><br>
                        {{ titles.address }}: {{ hotel.address }}<br>
                        {{ titles.subway }}: {{ hotel.subway }}
                                </p>
                                {{ hotel.address_description|raw }}
                            </div>
                            <div class="col-md-6">
                                <script type="text/javascript" charset="utf-8" src="{% if lang.type == "ru" %}{{ hotel.maps_link }}{% else %}{{ hotel.maps_link|replace({'ru_RU': 'en_US'}) }}{% endif %}"></script>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}