{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{{ block.title }}</h1>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="card_2 caption color_1">
                       {{ block.text|raw }}
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="card caption">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Выберите количество гостей в номере</label>
                            <div class="col-sm-8">
                                <select name="guests" class="form-control input-sm">
                                    {% for i in 1..settings.guests_count %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Выберите тариф</label>
                            <div class="col-sm-8">
                                <select name="tariff" class="form-control input-sm">
                                    {% for t in rates %}
                                        <option value="{{ t.id }}">{{ t.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div style="clear: both"></div>
                        <div class="card_2 caption color_4">
                            {{ rates.0.description|raw }}
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Отель</th>
                                    {% for room in rooms %}
                                    <th>{{ room.title }}</th>
                                    {% endfor %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for hotel in hotels %}
                                <tr>
                                    <td><a class="ab1" href="/hotels?id={{ hotel.id }}">«{{ hotel.title }}»</td>

                                        {% for room in rooms %}
                                    <td class="{{ hotel.id }}_{{ room.id }}">{{ hotels_rates[hotel.id][room.id] }}</td>
                                            {% endfor %}


                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card caption">
                        <div class="form-group">
                            <label class="control-label">Цены на дополнительные услуги</label>
                        </div>
                        <div style="clear: both"></div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Отель</th>
                                    {% for service in services %}
                                        <th>{{ service.title }}</th>
                                    {% endfor %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for hotel in hotels %}
                                <tr>
                                    <td><a class="ab1" href="/hotels?id={{ hotel.id }}">«{{ hotel.title }}»</td>

                                        {% for service in services %}
                                    <td>{{ services_rates[hotel.id][service.id] }}</td>
                                            {% endfor %}


                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}