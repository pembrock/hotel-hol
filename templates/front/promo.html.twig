{% extends '/front/index.html.twig' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{% if lang.type == "ru" %}Акции на номера в мини-гостиницах Hotel-hol{% elseif lang.type == "us" %}Promotions in the rooms at Hotel-hol mini-hotels{% elseif lang.type == "cn" %}促銷客房的酒店 - HOL迷你酒店{% else %}Акции на номера в мини-гостиницах Hotel-hol{% endif %}</h1>
                    </div>
                </div>
                {% for value in promo %}
                    {#{% if date(value.start_ts) < date('now') and date(value.stop_ts) > date('now') %}#}
                    {% if value.description is not empty or value.title != "0" %}
                <div class="col-md-3">
                    <div class="card color_1">
                        {% if value.image is not empty %}
                        <a href="?id={{ value.id }}"><img src="../../public/upload/images/promo/{{ value.image }}" class="img-responsive card_1"></a>
                        {% endif %}
                        <div class="caption">
                            <h3>{{ value.title }}</h3>
                            <p>{{ value.description|raw }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
        </div>
    </section>
{% endblock %}